<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/loginFormLinearLayout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/login_form_vertical_padding"
        android:paddingEnd="@dimen/login_form_horizontal_padding"
        android:paddingStart="@dimen/login_form_horizontal_padding"
        android:paddingTop="@dimen/login_form_vertical_padding">

    <com.raptis.konstantinos.keystrokerecognitionforandroid.components.CustomEditText
        android:id="@+id/signUpEmailEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Email"
        android:layout_marginLeft="@dimen/login_form_horizontal_margin"
        android:layout_marginRight="@dimen/login_form_horizontal_margin"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"/>

    <com.raptis.konstantinos.keystrokerecognitionforandroid.components.CustomEditText
        android:id="@+id/signUpPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Password"
        android:layout_marginLeft="@dimen/login_form_horizontal_margin"
        android:layout_marginRight="@dimen/login_form_horizontal_margin"
        android:layout_marginTop="@dimen/login_form_vertical_margin"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"/>

    <com.raptis.konstantinos.keystrokerecognitionforandroid.components.CustomEditText
        android:id="@+id/signUpFirstNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="First Name"
        android:layout_marginLeft="@dimen/login_form_horizontal_margin"
        android:layout_marginRight="@dimen/login_form_horizontal_margin"
        android:layout_marginTop="@dimen/login_form_vertical_margin"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:lines="1"/>

    <com.raptis.konstantinos.keystrokerecognitionforandroid.components.CustomEditText
        android:id="@+id/signUpLastNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Last Name"
        android:layout_marginLeft="@dimen/login_form_horizontal_margin"
        android:layout_marginRight="@dimen/login_form_horizontal_margin"
        android:layout_marginTop="@dimen/login_form_vertical_margin"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:lines="1"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_centerHorizontal="true"
        android:onClick="submit"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/login_button_size"
        android:layout_marginTop="@dimen/login_form_vertical_margin"
        android:background="@color/colorAccent"/>

    </LinearLayout>

</RelativeLayout>