<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.raptis.konstantinos.keystrokerecognitionforandroid.MainActivity"

    >

    <LinearLayout
        android:id="@+id/loginFormLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/login_form_vertical_padding"
        android:paddingEnd="@dimen/login_form_horizontal_padding"
        android:paddingStart="@dimen/login_form_horizontal_padding"
        android:paddingTop="@dimen/login_form_vertical_padding">

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_form_horizontal_margin"
            android:layout_marginRight="@dimen/login_form_horizontal_margin"
            android:gravity="center"
            android:hint="@string/username_hint" />

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/login_form_horizontal_margin"
            android:layout_marginRight="@dimen/login_form_horizontal_margin"
            android:layout_marginTop="@dimen/login_form_vertical_margin"
            android:gravity="center"
            android:hint="@string/password_hint"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/login_form_vertical_margin"
            android:background="@color/colorAccent"
            android:onClick="login"
            android:text="@string/login_button_text"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/login_button_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="signUp"
            android:text="@string/sign_up_text_view_text"
            android:textColor="@color/sign_up_text_color" />

    </LinearLayout>

</RelativeLayout>
