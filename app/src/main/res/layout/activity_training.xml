<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trainingViewPager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white">

        <com.raptis.konstantinos.keystrokerecognitionforandroid.components.CustomEditText
            android:id="@+id/trainingPasswordEdiText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:gravity="center"
            android:layout_marginLeft="@dimen/login_form_horizontal_margin"
            android:layout_marginRight="@dimen/login_form_horizontal_margin"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:lines="1"
            />

        <com.raptis.konstantinos.keystrokerecognitionforandroid.components.CustomEditText
            android:id="@+id/trainingPasswordEdiText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trainingPasswordEdiText1"
            android:hint="@string/password_hint"
            android:gravity="center"
            android:layout_marginLeft="@dimen/login_form_horizontal_margin"
            android:layout_marginRight="@dimen/login_form_horizontal_margin"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:lines="1"/>

        <com.raptis.konstantinos.keystrokerecognitionforandroid.components.CustomEditText
            android:id="@+id/trainingPasswordEdiText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trainingPasswordEdiText2"
            android:hint="@string/password_hint"
            android:gravity="center"
            android:layout_marginLeft="@dimen/login_form_horizontal_margin"
            android:layout_marginRight="@dimen/login_form_horizontal_margin"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:lines="1"/>

        <com.raptis.konstantinos.keystrokerecognitionforandroid.components.CustomEditText
            android:id="@+id/trainingPasswordEdiText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trainingPasswordEdiText3"
            android:hint="@string/password_hint"
            android:gravity="center"
            android:layout_marginLeft="@dimen/login_form_horizontal_margin"
            android:layout_marginRight="@dimen/login_form_horizontal_margin"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:lines="1"/>

        <com.raptis.konstantinos.keystrokerecognitionforandroid.components.CustomEditText
            android:id="@+id/trainingPasswordEdiText5"
